FFLAGS =   -O3 
#FLDFLAGS = -L/opt/intel/mkl72/lib/32 -lmkl_lapack -lmkl_p4 -lmkl_lapack32 -lmkl
FLDFLAGS = -L/usr/local/apps/mass -L/usr/local/apps/LAPACK
FLDOPTS = -qtune=pwr4 -qarch=pwr4 -lmassvp4 -lmass -lessl -q64 -llapack
FC = xlf90_r
SRCS = vmean.f90 my_datav3.f90 matvec2v4.f90   modcgv3.f90  cg2_4v8.f90   
exe:     $(SRCS)
	$(FC) $(FFLAGS) $(SRCS) -o cg2 $(FLDFLAGS) 
dbg:	$(SRCS)
	$(FC) -g $(FFLAGS)  $(SRCS) -o cg2_4v8_dbg $(FLDFLAGS)

