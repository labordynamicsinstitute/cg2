FFLAGS =    -O3 
#FLDFLAGS =-L/opt/intel/mkl/8.0/lib/64 -lmkl_lapack -lmkl_lapack32 -lmkl -lguide -lpthread
# Use the SGI Scientific Computing Software Library (SCSL)
FLDFLAGS =-lscs
FC = ifort
SRCS = my_datav3.f90 matvec2v4.f90   modcgv3.f90 vmean.f90 cg2_4v5.f90   
exe:     $(SRCS)
	$(FC) $(FFLAGS) $(SRCS) -o cg2_4v5 $(FLDFLAGS) 


dbg:	$(SRCS)
	$(FC) -g  $(SRCS) -o cg2_4v5_dbg $(FLDFLAGS)
